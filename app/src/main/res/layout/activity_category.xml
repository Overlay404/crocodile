<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65A54A"
    tools:context=".Category">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:background="#52AEB1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56802C"
            android:orientation="vertical">

            <Button
                android:id="@+id/category1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="Животные" />

            <Button
                android:id="@+id/category2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="Профессии" />

            <Button
                android:id="@+id/category8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="Разное" />

            <Button
                android:id="@+id/category3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="НЕ РАБОТАЕТ" />

            <Button
                android:id="@+id/category4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="НЕ РАБОТАЕТ" />

            <Button
                android:id="@+id/category5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="НЕ РАБОТАЕТ" />

            <Button
                android:id="@+id/category6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="НЕ РАБОТАЕТ" />

            <Button
                android:id="@+id/category7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#548523"
                android:text="НЕ РАБОТАЕТ" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Выбирете категорию "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>